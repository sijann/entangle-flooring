{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }}">
  <div class="en-width section-{{ section.id }}-padding flex flex-col">
    <h2 class="text-2xl font-semibold py-2">{{ section.settings.heading }}</h2>

    {% assign collection_handle = section.settings.collection %}
    {% assign collection = collections[collection_handle] %}

    <div class="en-grid-gap grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4">
      {% for product in collection.products limit: section.settings.max_products_to_show %}
        {% render 'product-card', card_product: product, quick_add: section.settings.enable_quick_add %}

      {% else %}
        {% for item in (1..4) %}
          {% render 'product-card-empty', index: forloop.index %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "label": "Heading",
      "id": "heading",
      "default": "Featured Collection"
    },
    {
      "type": "collection",
      "label": "Collection",
      "id": "collection"
    },
    {
      "type": "range",
      "label": "Number of Columns on Desktop",
      "id": "columns_desktop",
      "default": 3,
      "min": 1,
      "max": 4,
      "step": 1
    },
    {
      "type": "range",
      "label": "Number of Columns on Mobile",
      "id": "columns_mobile",
      "default": 1,
      "min": 1,
      "max": 3,
      "step": 1
    },
    {
      "type": "radio",
      "label": "Display Type",
      "id": "display_type",
      "options": [
        { "value": "grid", "label": "Grid" },
        { "value": "slider", "label": "Slider" }
      ],
      "default": "grid"
    },
    {
      "type": "checkbox",
      "label": "Enable Quick Add",
      "id": "enable_quick_add",
      "default": true
    },
    {
      "type": "range",
      "id": "max_products_to_show",
      "label": "Maximum products to show",
      "default": 8,
      "min": 1,
      "max": 20
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 25,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 25,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "color_scheme",
      "label": "Color Scheme",
      "id": "color_scheme",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
