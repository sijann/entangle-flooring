<div class="h-full w-full flex flex-col justify-center items-center color-{{ section.settings.color_scheme }}">
  <div class="w-full max-w-md p-8 rounded">
    <h2 class="text-3xl font-bold mb-6 text-center">Register</h2>

    {% form 'create_customer' %}
       <div class="mb-6">
        <label for="firstName" class="block mb-2">First Name</label>
        <input type="text" id="firstName" name="customer[first_name]" class="input w-full p-2 mb-4" required>
    
        <label for="lastName" class="block mb-2">Last Name</label>
          <input type="text" id="lastName" name="customer[last_name]" class="input w-full p-2 mb-4" required>
    
          <label for="email" class="block mb-2">Email address<span class="text-red-500">*</span></label>
          <input type="email" id="email" name="customer[email]" class="input w-full p-2 mb-4" required>
    
          <label for="password" class="block mb-2">Password<span class="text-red-500">*</span></label>
          <input type="password" id="password" name="customer[password]" class="input w-full p-2 mb-4" required>
    
          <p class="text-justify text-wrap">Your personal data will be used to support your experience thoughtout this website, to managed acess to your account, and for other purpose described in our <span class="font-semibold" >privacy policy</span></span></p>
          <button type="submit" class="button button-primary w-full py-3 px-5 mt-4">REGISTER</button>

       </div>
      {% endform %}

    
   
    </form>

    <div class="text-center my-4 flex items-center">
      <div class="flex-1 border-t"></div>
      <span class="mx-4">or</span>
      <div class="flex-1 border-t"></div>
    </div>

    <a href="{{ routes.account_login_url}}">
      <button class="button button-secondary w-full py-3 px-5">Log<span class="ml-2">in</span></button>
    </a>
  </div>
</div>
{% schema %}
  {
      "name": "Login",
      "class": "h-full flex flex-col justify-center",
      "settings": [
      
      {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "Color scheme",
          "default": "background-1"
      }
          
          ]
  }
  {% endschema %}