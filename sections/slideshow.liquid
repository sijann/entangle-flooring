<div class="ent-slideshow max-h-[750px]" style="background-color: {{ section.settings.background_color }};">
  {% for block in section.blocks %}
    <div class="relative w-full" {{ block.shopify_attributes }}>
      {% liquid
        assign bgImage = block.settings.background_image
        assign overlayColor = block.settings.overlay_color
        assign overlayOpacity = block.settings.overlay_opacity
        assign heading = block.settings.heading
        if heading == blank
          assign heading = 'Slide Heading'
        endif
        assign textContent = block.settings.text_content
        if textContent == blank
          assign textContent = 'Slide image text'
        endif
        assign buttonText = block.settings.button_text
        assign buttonURL = block.settings.button_url
        assign buttonBackground = block.settings.button_bg_color
        assign buttonTextColor = block.settings.button_text_color
        assign contentPosition = block.settings.content_position
        assign alignment = block.settings.alignment
        assign textColor = block.settings.text_color
      %}
      <div
        class="ent-image-overlay-container relative w-full pb-[55%]"
        style="{% if bgImage %}background-color: {{ overlayColor }};{% endif %}"
      >
        {% if bgImage %}
          <div
            class="ent-image-overlay absolute top-0 left-0 w-full h-full bg-cover bg-center bg-no-repeat"
            style="background-image: url({{ bgImage | img_url: 'master' }}); color: {{ overlayColor }}; opacity: {{ overlayOpacity }};"
          >
            '
          </div>
        {% else %}
          {{
            'hero-apparel-1'
            | placeholder_svg_tag: 'ent-placeholder-svg ent-image-overlay-svg absolute top-0 left-0 w-full h-full bg-cover bg-center bg-no-repeat'
          }}
        {% endif %}
        <div class="ent-content-wrapper px-8 md:px-0 absolute w-full lg:w-1/2 {{ contentPosition }}">
          <h2
            class="en-title-xl"
            style="color: {{ textColor }} "
          >
            {{ heading }}
          </h2>
          <p class="block mt-4 md:text-[2.5rem]" style="color: {{ textColor }}">
            {{ textContent }}
          </p>
          {% if buttonText %}
            <a href="{{ buttonURL }}" class="ent-overlay-button ent-button mt-4">
              {{- buttonText -}}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  {% else %}
    {% for i in (1..3) %}
      <div class="relative w-full" {{ block.shopify_attributes }}>
        <div
          class="ent-image-overlay-container relative w-full pb-[55%]"
        >
          {{
            'hero-apparel-1'
            | placeholder_svg_tag: 'ent-placeholder-svg ent-image-overlay-svg absolute top-0 left-0 w-full h-full bg-cover bg-center bg-no-repeat'
          }}

          <div class="ent-content-wrapper absolute w-full lg:w-1/2 center">
            <h2
              class="block font-bold uppercase large mt-4 md:text-[4rem]"
            >
              Slide Heading
            </h2>
            <p class="block mt-4 md:text-[2.5rem]">Slide Image Text</p>
          </div>
        </div>
      </div>
    {% endfor %}
  {% endfor %}
</div>
<style>
  .ent-content-wrapper.top-left {
    top: 10%;
    left: 10%;
  }
  .ent-content-wrapper.top-center {
    top: 10%;
    left: 50%;
    transform: translate(-50%, 0);
    width: auto;
  }
  .ent-content-wrapper.top-right {
    top: 10%;
    right: 10%;
  }
  .ent-content-wrapper.center-left {
    top: 50%;
    left: 10%;
    transform: translate(0, -50%);
    width: auto;
  }
  .ent-content-wrapper.center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: auto;
  }
  .ent-content-wrapper.center-right {
    top: 50%;
    right: 10%;
    transform: translate(0, -50%);
    width: auto;
  }
  .ent-content-wrapper.bottom-left {
    bottom: 10%;
    left: 10%;
  }
  .ent-content-wrapper.bottom-center {
    bottom: 10%;
    left: 50%;
    transform: translate(-50%, 0);
    width: auto;
  }
  .ent-content-wrapper.bottom-right {
    bottom: 10%;
    right: 10%;
  }

  .ent-image-overlay-section h2,
  .ent-image-overlay-section p {
    margin: 0;
    padding: 0;
  }

  @media screen and (max-width: 749px) {
    .ent-image-overlay-container {
      min-height: 36rem;
    }
    .ent-content-wrapper {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100% !important;
    }
  }
</style>

<script>
  function updateSlideshow() {
    var elem = document.querySelector('.ent-slideshow');
    var flkty = new Flickity(elem, {
      cellAlign: 'center',
      contain: true,
      pageDots: false,
      wrapAround: true,
      prevNextButtons: true,
      autoPlay: {{ section.settings.slide_duration | plus: 0 | times: 1000 }},
    });
  }

  window.addEventListener('load', updateSlideshow);
  document.addEventListener('shopify:block:select', updateSlideshow);
  document.addEventListener('shopify:block:deselect', updateSlideshow);
  document.addEventListener('shopify:section:load', updateSlideshow);
</script>

{% schema %}
{
  "name": "Slideshow",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "slide_duration",
      "min": 1,
      "max": 15,
      "default": 7,
      "step": 1,
      "label": "Slide duration"
    },
    {
      "type": "select",
      "id": "slide_style",
      "default": "fade",
      "label": "Slide style",
      "options": [
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ]
    }
  ],
  "blocks": [
    {
      "name": "Slide",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "Overlay Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "label": "Overlay Opacity",
          "min": 0,
          "max": 1,
          "step": 0.1,
          "default": 1
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "text_content",
          "label": "Text Content"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button link"
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Button background olor",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button text color",
          "default": "#000000"
        },
        {
          "type": "select",
          "id": "content_position",
          "label": "Content Position",
          "options": [
            { "value": "top-left", "label": "Top Left" },
            { "value": "top-center", "label": "Top Center" },
            { "value": "top-right", "label": "Top Right" },
            { "value": "center-left", "label": "Center Left" },
            { "value": "center", "label": "Center" },
            { "value": "center-right", "label": "Center Right" },
            { "value": "bottom-left", "label": "Bottom Left" },
            { "value": "bottom-center", "label": "Bottom Center" },
            { "value": "bottom-right", "label": "Bottom Right" }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "alignment",
          "default": "center",
          "label": "Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#FFFFFF"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow"
    }
  ]
}
{% endschema %}
