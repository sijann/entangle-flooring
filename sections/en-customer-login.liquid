<div class="h-full w-full flex flex-col justify-center color-{{ section.settings.color_scheme }}">
<div class="flex items-center justify-center py-8" x-data="{loginFrom: true, pwRecoverFrom: false}">
  <div class="w-full max-w-md p-8 rounded" x-show="loginFrom">
    <h2 class="text-3xl font-bold mb-6 text-center">Log<span class="ml-2">in</span></h2>

    {% form 'customer_login' %}
      
      <div class="mb-6">
        <label for="email" class="block mb-2">Email address<span class="text-red-500">*</span></label>
        <input type="email" id="email" name="customer[email]" class="input w-full mb-4" required>
  
        <label for="password" class="block mb-2">Password<span class="text-red-500">*</span></label>
        <input type="password" id="password" name="customer[password]" class="input w-full mb-4" required>
        <p class="  cursor-pointer" x-on:click=" loginFrom = false; pwRecoverFrom = true">Forget your password?</p>
        <button type="submit" class="button button-primary w-full py-3 px-5 mt-5">LOG<span class="ml-2">IN</span></button>
      </div>
    {% endform %}
    
   
    <div class="text-center my-4 flex items-center">
      <div class="flex-1 border-t"></div>
      <span class="mx-4">or</span>
      <div class="flex-1 border-t"></div>
    </div>

   
    <a href="{{ routes.account_register_url }}"><button class="button button-secondary w-full py-3 px-5  ">{{ 'customer.register.submit' | t }}</button></a>
  </div>
  <div class="w-full max-w-md p-8 rounded hidden" x-show="pwRecoverFrom">
    <h2 class="text-3xl font-bold mb-1 text-center">Reset Password</h2>
    <p class="text-justify  text-wrap mb-8">We will send you an email to reset your password</p>

    {% form 'recover_customer_password' %}
      <div class="mb-6">
        {% if form.errors %}
          <div style="background-color:red">
            <strong>Error</strong>

            <div >
              {{ form.errors | default_errors }}
            </div>
          </div>
        {% endif %}
        <label for="email" class="block mb-2 ">Email address<span class="text-red-500">*</span></label>
        <input type="email" id="email" name="email" class="w-full p-2 mb-4 border-2" required>

        <div class="flex justify-between items-center">
          <button type="submit" class="w-full py-3 px-5 ">SUBMIT</button>
          
        </div>
      </div>
    {% endform %}
    <div class="text-center my-4 flex items-center">
      <div class="flex-1 border-t"></div>
      <span class="mx-4">or</span>
      <div class="flex-1 border-t"></div>
    </div>
    <a href="{{ routes.account_login_url}}"><button class="w-full py-3 px-5 border-2  ">CANCEL</button></a>
    

  </div>
</div>

</div>
{% schema %}
{
    "name": "Login",
    "class": "h-full flex flex-col justify-center",
    "settings": [
    
    {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "background-1"
    }
        
        ]
}
{% endschema %}