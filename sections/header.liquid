{% style %}
  en-header{
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }
{% endstyle %}

{% liquid
  assign grid_classes = 'grid grid-cols-3'
  assign logo_classes = 'flex items-center justify-center flex-grow'
  if section.settings.menu_style == 'left_center'
    assign grid_classes = 'flex items-center justify-between'
    assign logo_classes = 'flex'
  elsif section.settings.menu_style == 'left_left'
    assign grid_classes = 'flex items-center'
    assign logo_classes = 'flex'
  endif
%}

<en-header
  data-headertype="hideonscroll"
  class="fixed left-0 top-0 w-full transition-all duration-500 z-[10] {% if settings.corners == "rounded" %} rounded-lg {% endif %}"
>
  <div class="en-container relative ">
    <div class="en-width  flex flex-col gap-8 lg:py-6">
      <div class="{{ grid_classes }}">
        <open-drawer
          data-drawer="menu"
          class="en-menu-icon w-[30px] cursor-pointer flex flex-col items-center justify-center gap-1 {% unless section.settings.menu_style == 'drawer' %} lg:hidden {% endunless %}"
        >
          {% render 'icon-bars' %}
        </open-drawer>

        {% if section.settings.menu_style == 'top_bottom' %}
          <div></div>
        {% endif %}

        <div class="{{ logo_classes }} shrink-0">
          <a href="{{ routes.root_url }}">
            {%- if settings.logo != blank -%}
              {% if settings.logo_mobile != blank %}
                <div class="md:hidden">
                  {%- assign logo_alt = settings.logo_mobile.alt | default: shop.name | escape -%}
                  {%- assign logo_height = settings.logo_width_mobile
                    | divided_by: settings.logo_mobile.aspect_ratio
                  -%}
                  {% capture sizes %}(max-width: {{ settings.logo_width_mobile | times: 2 }}px) 50vw, {{ settings.logo_width_mobile }}px{% endcapture %}
                  {% capture widths %}{{ settings.logo_width_mobile }}, {{ settings.logo_width_mobile | times: 1.5 | round }}, {{ settings.logo_width_mobile | times: 2 }}{% endcapture %}
                  {{
                    settings.logo_mobile
                    | image_url: width: 600
                    | image_tag:
                      class: 'logo',
                      widths: widths,
                      height: logo_height,
                      width: settings.logo_width_mobile,
                      alt: logo_alt,
                      sizes: sizes,
                      preload: true
                  }}
                </div>
              {% endif %}
              <div class="{% if settings.logo_mobile != blank %} hidden md:block {% endif %}">
                {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
                {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
                {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
                {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
                {{
                  settings.logo
                  | image_url: width: 600
                  | image_tag:
                    class: 'logo',
                    widths: widths,
                    height: logo_height,
                    width: settings.logo_width,
                    alt: logo_alt,
                    sizes: sizes,
                    preload: true
                }}
              </div>
            {%- else -%}
              <h1 class="text-2xl uppercase">{{ shop.name }}</h1>
            {%- endif -%}
          </a>
        </div>

        {% if section.settings.menu_style == 'left_center' or section.settings.menu_style == 'left_left' %}
          {% render 'mega-menu', menu: section.settings.menu %}
        {% endif %}

        <div class="icons flex items-center justify-end gap-2 shrink-0 {% if section.settings.menu_style == 'left_left' %} ml-auto {% endif %} ">
          {% if section.settings.enable_language_selector %}
            {% render 'language-localization' %}
          {% endif %}
          <div class="en-menu-icon lg:hidden">
            {% render 'icon-search' %}
          </div>

          {% if settings.cart_type == 'drawer' %}
            <open-drawer data-drawer="cart-drawer" class="cursor-pointer">
              {% unless section.settings.icon_style == 'text' %}
                {% render 'icon-cart', items: cart.item_count, style: section.settings.icon_style %}
              {% else %}
                Cart
              {% endunless %}
            </open-drawer>

          {% else %}
            <div class="cart">
              <a href="{{ routes.cart_url }}">
                {% unless section.settings.icon_style == 'text' %}
                  {% render 'icon-cart', items: cart.item_count, style: section.settings.icon_style %}
                {% else %}
                  Cart
                {% endunless %}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
      {% if section.settings.menu_style == 'top_bottom' %}
        {% render 'mega-menu', menu: section.settings.menu %}
      {% endif %}
      {% render 'menu-drawer', menu: section.settings.menu, menu_style: section.settings.menu_style %}
    </div>
  </div>
</en-header>

<div
  id="overlay"
  class="overlay-full"
></div>
{% render 'cart-drawer-new' %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    },
    {
      "type": "select",
      "id": "menu_style",
      "default": "left_center",
      "label": "Menu style",
      "options": [
        {
          "label": "Logo top, menu bottom",
          "value": "top_bottom"
        },
        {
          "label": "Logo left, menu center",
          "value": "left_center"
        },
        {
          "label": "Logo left, menu left",
          "value": "left_left"
        },
        {
          "value": "drawer",
          "label": "Drawer"
        }
      ]
    },
    {
      "type": "select",
      "id": "icon_style",
      "default": "standard",
      "label": "Icon style",
      "options": [
        {
          "label": "Standard",
          "value": "standard"
        },
        {
          "value": "modern",
          "label": "Modern"
        },
        {
          "value": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "default": false,
      "label": "Enable language selector"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#000000",
      "label": "Text color"
    }
  ]
}
{% endschema %}
